<main class="main-content">
  <h1>My Wishlist</h1>
  {% if customer.tags contains 'wishlist' %}
    <ul class="wishlist-grid">
      {% for item in customer.metafields.wishlist.items %}
        <li>
          <a href="{{ item.url }}">
            {% if item.image %}
              <img src="{{ item.image | img_url: '100x' }}">
            {% endif %}
            {{ item.title }}
          </a>
          <form method="post" action="/wishlist/remove">
            <input type="hidden" name="product_id" value="{{ item.id }}">
            <button type="submit">Remove</button>
          </form>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>Your wishlist is empty.</p>
  {% endif %}
  <a href="/account">Back to Account</a>
</main>

{% schema %}
{
  "name": "Main Wishlist",
  "settings": [],
  "presets": [
    {
      "name": "Main Wishlist"
    }
  ]
}
{% endschema %}
