<main class="main-content">
  <h1>My Account</h1>
  <ul>
    <li><a href="/account/addresses">Manage Addresses</a></li>
    <li><a href="/account/settings">Account Settings</a></li>
    <li><a href="/wishlist">My Wishlist</a></li>
    <li><a href="/account/logout">Logout</a></li>
    <li><a href="/account/orders">Order Tracking</a></li>
  </ul>
  <h2>Order History</h2>
  {% for order in customer.orders %}
    <div class="order-card">
      <a href="{{ order.order_status_url }}">Order #{{ order.name }}</a> – {{ order.financial_status | capitalize }} – {{ order.created_at | date: "%b %d, %Y" }}
      <a href="/account">Back to Account</a>
    </div>
  {% else %}
    <p>No orders yet.</p>
  {% endfor %}
</main>

{% schema %}
{
  "name": "Main Account",
  "settings": [],
  "presets": [
    {
      "name": "Main Account"
    }
  ]
}
{% endschema %}
