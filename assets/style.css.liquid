@font-face {
  font-family: 'Orbitron';
  src: url('{{ "Orbitron-VariableFont_wght.ttf" | asset_url }}') format('truetype');
  font-weight: 100 900;
  font-style: normal;
  font-display: swap;
}

/* ====== Custom Header for Logo + Text + Marketplace Link ====== */
.custom-header {
  display: flex;
  align-items: flex-start;
  gap: 1.2em;
  padding-top: 1.2em;
  padding-left: 1.5em;
}
.main-logo-link {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  text-decoration: none;
  max-width: 150px;
}
.main-logo-img {
  width: auto;
  height: auto;
  max-width: 150px;
  max-height: 50px;
  display: block;
}
.main-logo-text {
  margin-top: 0.2em;
  color: #8B5CF6;
  font-size: 0.98em;
  font-family: 'Orbitron', Arial, sans-serif;
  font-weight: 700;
  text-align: left;
  word-break: normal;
  white-space: normal;
  max-width: 150px;
  width: 100%;
  line-height: 1.2;
}
.marketplace-link {
  align-self: center;
  margin-left: 1.1em;
  color: #E2E8F0;
  font-family: 'Orbitron', Arial, sans-serif;
  font-size: 1.15em;
  text-decoration: none;
  font-weight: 700;
  padding: 0.3em 0.7em;
  border-radius: 6px;
  transition: background 0.2s, color 0.2s;
}
.marketplace-link:hover {
  background: #8B5CF6;
  color: #fff;
}
/* Responsive: stack logo/text if needed on small screens */
@media (max-width: 600px) {
  .custom-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.7em;
    padding-left: 0.7em;
  }
  .marketplace-link {
    margin-left: 0;
    margin-top: 0.5em;
  }
}

/* ====== Reset & Base Styles ====== */
*, *::before, *::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}
html, body {
  min-height: 100%;
  font-family: 'Inter', Arial, sans-serif;
  background: #0F0F23;
  color: #E2E8F0;
  font-size: 16px;
  line-height: 1.6;
  overflow-x: hidden;
}

