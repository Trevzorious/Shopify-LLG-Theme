@font-face {
  font-family: 'Orbitron';
  src: url('{{ "Orbitron-VariableFont_wght.ttf" | asset_url }}') format('truetype');
  font-weight: 100 900;
  font-style: normal;
  font-display: swap;
}

/* ====== Custom Header for Logo + Text + Marketplace Link ====== */
.custom-header {
  display: flex;
  align-items: flex-start;
  gap: 1.2em;
  padding-top: 1.2em;
  padding-left: 1.5em;
}
.main-logo-link {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  text-decoration: none;
}
.main-logo-img {
  max-width: 150px;
  max-height: 50px;
  width: 100%;
  height: auto;
  display: block;
}
.main-logo-text {
  display: block;
  margin-top: 0.2em;
  color: #8B5CF6;
  font-size: 0.98em;
  font-family: 'Orbitron', Arial, sans-serif;
  font-weight: 700;
  text-align: left;
}
.marketplace-link {
  align-self: center;
  margin-left: 1.1em;
  color: #E2E8F0;
  font-family: 'Orbitron', Arial, sans-serif;
  font-size: 1.15em;
  text-decoration: none;
  font-weight: 700;
  padding: 0.3em 0.7em;
  border-radius: 6px;
  transition: background 0.2s, color 0.2s;
}
.marketplace-link:hover {
  background: #8B5CF6;
  color: #fff;
}
/* Responsive: stack logo/text if needed on small screens */
@media (max-width: 600px) {
  .custom-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.7em;
    padding-left: 0.7em;
  }
  .marketplace-link {
    margin-left: 0;
    margin-top: 0.5em;
  }
}

/* ====== Reset & Base Styles ====== */
*, *::before, *::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}
html, body {
  min-height: 100%;
  font-family: 'Inter', Arial, sans-serif;
  background: #0F0F23;
  color: #E2E8F0;
  font-size: 16px;
  line-height: 1.6;
  overflow-x: hidden;
}

/* ====== Navbar ====== */
.navbar {
  position: sticky;
  top: 0;
  width: 100%;
  background: rgba(15, 15, 35, 0.97);
  box-shadow: 0 1px 6px rgba(0,0,0,0.12);
  z-index: 100;
  padding: 1rem 0;
}
.nav-container {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 2rem;
}
.logo {
  font-family: 'Orbitron', monospace;
  font-size: 1.7rem;
  font-weight: 900;
  color: #8B5CF6;
  text-decoration: none;
  letter-spacing: .02em;
}
.nav-links {
  display: flex;
  gap: 1.5rem;
  list-style: none;
}
.nav-links a {
  color: #E2E8F0;
  text-decoration: none;
  font-weight: 500;
  padding: 0.4em 0.5em;
  border-radius: 5px;
  transition: background .2s, color .2s;
}
.nav-links a:hover,
.nav-links a.active {
  background: #8B5CF6;
  color: #fff;
}
.header-search {
  display: flex;
  align-items: center;
  gap: 0.3em;
}
.header-search input[type="search"] {
  padding: 0.4em 0.7em;
  border-radius: 4px 0 0 4px;
  border: none;
  outline: none;
  background: #191940;
  color: #fff;
  min-width: 150px;
}
.header-search button {
  background: #8B5CF6;
  color: #fff;
  border: none;
  padding: 0.4em 0.9em;
  border-radius: 0 4px 4px 0;
  cursor: pointer;
  font-weight: bold;
  transition: background .2s;
}
.header-search button:hover {
  background: #06B6D4;
}

/* ====== Login Dropdown Styles ====== */
.header-login-menu, .header-account-menu {
  position: relative;
}
.login-link, .account-link {
  cursor: pointer;
  user-select: none;
}
.login-dropdown, .account-dropdown {
  display: none;
  position: absolute;
  top: 110%;
  right: 0;
  min-width: 260px;
  background: #18182f;
  border: 1px solid #2d2d49;
  border-radius: 10px;
  box-shadow: 0 4px 32px rgba(139,92,246,0.13);
  padding: 1.3em 1.2em 1em 1.2em;
  z-index: 2000;
}
.login-dropdown.active,
.header-account-menu:hover .account-dropdown {
  display: block;
}
.login-dropdown form {
  display: flex;
  flex-direction: column;
  gap: 0.8em;
}
.login-dropdown label {
  font-size: 0.98em;
  color: #a3a6be;
  margin-bottom: 0.2em;
}
.login-dropdown input[type="email"],
.login-dropdown input[type="password"] {
  padding: 0.5em;
  border-radius: 5px;
  border: 1px solid #27274a;
  background: #22224c;
  color: #e2e8f0;
  margin-bottom: 0.3em;
}
.login-dropdown button[type="submit"] {
  background: linear-gradient(45deg, #8B5CF6, #06B6D4);
  color: #fff;
  border: none;
  border-radius: 7px;
  font-weight: 600;
  padding: 0.7em;
  cursor: pointer;
  margin-top: 0.6em;
}
.login-actions, .account-dropdown {
  display: flex;
  flex-direction: column;
  gap: 0.4em;
  margin-top: 0.7em;
}
.login-actions a {
  color: #8B5CF6;
  font-size: 0.97em;
  text-decoration: none;
  transition: color .2s;
}
.login-actions a:hover {
  color: #06B6D4;
}
.account-dropdown {
  left: 50%;
  right: auto;
  transform: translateX(-50%);
  min-width: 190px;
  padding: 0.7em 0.5em;
  text-align: left;
  gap: 0.3em;
}
.account-dropdown li {
  list-style: none;
}
.account-dropdown a {
  color: #e2e8f0;
  text-decoration: none;
  font-size: 0.99em;
  display: block;
  border-radius: 5px;
  padding: 0.45em 0.6em;
  transition: background .19s, color .19s;
}
.account-dropdown a:hover {
  background: #8B5CF6;
  color: #fff;
}
/* Responsive (adjust dropdown for small screens) */
@media (max-width: 600px) {
  .login-dropdown, .account-dropdown {
    right: 50%;
    left: 0;
    min-width: 85vw;
    transform: translateX(0);
  }
}

/* ====== Main Content & Headers ====== */
.main-content {
  max-width: 1200px;
  margin: 2.5rem auto 2rem auto;
  padding: 1rem;
}
.page-header {
  text-align: center;
  margin-bottom: 2.5rem;
}
.page-header h1 {
  font-family: 'Orbitron', monospace;
  font-size: clamp(2.2rem, 5vw, 2.7rem);
  background: linear-gradient(90deg, #8B5CF6, #06B6D4, #EC4899);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 0.8rem;
}
.page-header p {
  color: #94A3B8;
  font-size: 1rem;
  max-width: 600px;
  margin: 0 auto;
}

/* ====== Product Grid & Card ====== */
.products-grid {
  display: grid;
  gap: 2rem;
  grid-template-columns: repeat(auto-fill, minmax(270px, 1fr));
  margin-bottom: 3rem;
  margin-top: 2rem;
  justify-content: center;
  width: 100%;
}
.products-grid.single-product {
  max-width: 320px;
  margin-left: auto;
  margin-right: auto;
  grid-template-columns: 1fr;
}
.product-card {
  background: rgba(139, 92, 246, 0.08);
  border: 1px solid rgba(139, 92, 246, 0.18);
  border-radius: 18px;
  overflow: hidden;
  transition: box-shadow 0.2s, transform 0.2s;
  display: flex;
  flex-direction: column;
  min-height: 380px;
  box-shadow: 0 2px 8px rgba(15, 15, 35, 0.03);
}
.product-card:hover {
  box-shadow: 0 8px 32px rgba(139, 92, 246, 0.14);
  transform: translateY(-4px) scale(1.01);
  border-color: #06B6D4;
}
.product-image {
  width: 100%;
  height: 200px;
  background: linear-gradient(135deg, #8B5CF6, #06B6D4);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}
.product-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}
.product-badge {
  position: absolute;
  top: 10px;
  right: 10px;
  background: #10B981;
  color: #fff;
  padding: 0.3rem 0.8rem;
  border-radius: 15px;
  font-size: 0.8rem;
  font-weight: 600;
}
.product-badge[disabled], .product-badge.soon {
  background: #F59E0B;
}
.product-info {
  padding: 1.3rem 1rem 1rem 1rem;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}
.product-title {
  margin: 0.2rem 0 0.5rem 0;
  font-family: 'Orbitron', monospace;
  font-size: 1.10rem;
  font-weight: 700;
}
.product-category {
  color: #06B6D4;
  text-transform: uppercase;
  font-size: 0.88rem;
  margin-bottom: 0.1rem;
  letter-spacing: 0.04em;
}
.product-description {
  color: #94A3B8;
  font-size: 0.93rem;
  margin-bottom: 1rem;
  line-height: 1.5;
  flex-grow: 1;
}
